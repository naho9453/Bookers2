<p id="notice"></p>
  <div class='container px-5 px-sm-0'>
   <div class='row'>
    <div class='col-md-3'>
     <h2>User info</h2>
      <table class='table'>
        <tbody>
          <tr><%= image_tag @user.get_profile_image(200,200) %></tr>

          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <tr>
      <th colspan="2">
        <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </th>
    </tr>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
  	  <table class="table table-hover table-inverse">
	  	  <h2>Users</h2>
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
  	    </thead>

  	  	<tbody>
  	  	  <% @users.each do |user| %>
	  	  	<tr>
	  	      <th>
      	  	  <%= image_tag user.get_profile_image(30,30) %>
            </th>
	  	  	  <th><%= user.name %></th>
	  	  	  <th><%= link_to "Show", "/users/#{user.id}" %></th>
	  	  	</tr>
  	  	  <% end %>
  	  	</tbody>

  	  </table>

  	</div>
  </div>