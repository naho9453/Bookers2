<table class="table table-user">
  <h2>User info</h2>
    <td><%= image_tag user.get_profile_image(100,100) %></td>

    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>

    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>

    <tr>
      <th colspan="2">
        <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </th>
    </tr>
</table>