<main>
<p id="notice"></p>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

        <h1>Editing Book</h1>
          <%= render 'error', book: @book %>
          <%= form_for(@book) do |f| %>
        <div class="form-title">Title</div>
          <%= f.text_field :title %>

        <div class="form-body">Opinion</div>
          <%= f.text_area :body %><br>
        <div class="upload">
          <%= f.submit " Update Book" %>
        </div>
          <% end %>


        <div class="menu">
          <%= link_to "Show", book_path(@book) %>
          |
          <%= link_to "Back", books_path %>
        </div>
      </div>
    </div>
  </div>
</main>